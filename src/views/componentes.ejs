<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
        <table class="table table-striped table-primary">
            <thead>
              <tr>
                <td>NÂ°</td>
                <td>Nombre</td>
                <td>Valor</td>
                <td>Cantidad </td>
                <td>Acciones </td>
              </tr>
            </thead>
            <tbody>
                <% if (data) { %> 
                  <% for(var i = 0; i < data.length; i++) {
                %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].nombre %></td>
                  <td><%= data[i].valor %></td>
                  <td><%= data[i].cantidad %></td>
                  <td>
                    <a href="/componente/delete/<%= data[i].id_c %>" class="btn btn-danger">Borrar</a>
                    <a href="/componente/update/<%= data[i].id_c %>" class="btn btn-info">Actualizar</a>
                  </td>
                </tr>
                <% } %> <% } %>
            </tbody>
            
          </table>



    </div>
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">

                <form action="/componente/add" method="POST">
                    <input
                      type="text"
                      name="nombre"
                      placeholder="Nombre"
                      class="form-control mb-2"
                      autofocus
                    />
                    <input
                      type="text"
                      name="valor"
                      placeholder="Valor"
                      class="form-control mb-2"
                    />
                    <input
                      type="number"
                      name="cantidad"
                      placeholder="Cantidad"
                      class="form-control mb-2"
                    />
                    <button type="submit" class="btn btn-info">Agregar componente</button>
                  </form>

       </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
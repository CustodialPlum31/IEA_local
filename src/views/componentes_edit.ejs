<%- include("partials/_header") %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <form action="/componente/update/<%= data.id_c %>" method="POST">
                    <input
                      type="text"
                      name="nombre"
                      value="<%= data.nombre %>"
                      class="form-control mb-2"
                      autofocus
                    />
                    <input
                      type="text"
                      name="valor"
                      value="<%= data.valor %>"
                      class="form-control mb-2"
                    />
                    <input
                      type="number"
                      name="cantidad"
                      value="<%= data.cantidad %>"
                      class="form-control mb-2"
                    />
                    <button type="submit" class="btn btn-info">Editar componente</button>
                  </form>
            </div>
        </div>
        </div>
    </div>
</div>

<%- include("partials/_footer") %>
<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
        <table class="table table-striped table-primary">
            <thead>
              <tr>
                <td>Nombre</td>
                <td>Correo</td>
                <td>Teléfono</td>
                <td>Contraseña</td>
                <td>Rol</td>
                <td>Acciones</td>
              </tr>
            </thead>
            <tbody>
                <% if (data) { %> 
                  <% for(var i = 0; i < data.length; i++) {
                %>
                <tr>
                  <td><%= data[i].nombre %></td>
                  <td><%= data[i].correo %></td>
                  <td><%= data[i].telefono %></td>
                  <td><%= data[i].contrasena %></td>
                  <td><%= data[i].role %></td>
                  <td>
                    <a href="/investigador/delete/<%= data[i].id %>" class="btn btn-danger">Borrar</a>
                    <a href="/investigador/update/<%= data[i].id %>" class="btn btn-info">Actualizar</a>
                  </td>
                </tr>
                <% } %> <% } %>
            </tbody>
            
          </table>



    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">

                <form action="/investigador/add" method="POST">
                    <input
                      type="text"
                      name="nombre"
                      placeholder="Nombre"
                      class="form-control mb-2"
                      autofocus
                    />
                    <input
                      type="email"
                      name="correo"
                      placeholder="Correo"
                      class="form-control mb-2"
                    />
                    <input
                      type="text"
                      name="telefono"
                      placeholder="Telefono"
                      class="form-control mb-2"
                    />
                    <input
                      type="password"
                      name="contrasena"
                      placeholder="Contraseña"
                      class="form-control mb-2"
                    />
                    <select name="role" class="form-control mb-2">
                      <option value="investigador">Investigador</option>
                      <option value="admin">Admin</option>
                    </select>
                    <button type="submit" class="btn btn-info">Agregar usuario</button>
                  </form>

       </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
<%- include("partials/_header") %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <form action="/investigador/update/<%= data.id %>" method="POST">
                    <input
                      type="text"
                      name="nombre"
                      value="<%= data.nombre %>"
                      class="form-control mb-2"
                      autofocus
                    />
                    <input
                      type="email"
                      name="correo"
                      value="<%= data.correo %>"
                      class="form-control mb-2"
                    />
                    <input
                      type="text"
                      name="telefono"
                      value="<%= data.telefono %>"
                      class="form-control mb-2"
                    />
                    <input
                      type="password"
                      name="contrasena"
                      value="<%= data.contrasena %>"
                      class="form-control mb-2"
                    />
                    <select name="role" class="form-control mb-2">
                      <option value="investigador" <%= data.role === 'investigador' ? 'selected' : '' %>>Cliente</option>
                      <option value="admin" <%= data.role === 'admin' ? 'selected' : '' %>>Administrador</option>
                  </select>
                    <button type="submit" class="btn btn-info">Editar usuario</button>
                  </form>
            </div>
        </div>
        </div>
    </div>
</div>

<%- include("partials/_footer") %>